
@model  ProyectoAplicacion.Entities.Empleado
@{
    ViewBag.Title = "Perfil Empleado";
    Layout = "~/Views/Shared/Internal_LayoutNoFooter.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link rel="stylesheet" type="text/css" href="styles.css">
    <meta name="viewport" content="width=device-width" />
    <title>Mi Perfil</title>
</head>
<body>
    @using (Html.BeginForm("", ""))
    {

        <div class="form-horizontal">
            <h4>Mi perfil</h4>
            <hr />

            <b>NOMBRE:</b>
            <div class="form-group form-inline">
                <div class="col-md-10">
                    @Html.EditorFor(model => Session["NombreUsuario"], new { htmlAttributes = new { @class = "form-control", @style = "width:500px", @readonly = "readonly" } })
                </div>
            </div>

            <br />
            <b>PRIMER APELLIDO: </b>
            <div class="form-group form-inline">
                <div class="col-md-10">
                    @Html.EditorFor(model => Session["ApellidoUsuario"], new { htmlAttributes = new { @class = "form-control", @style = "width:500px", @readonly = "readonly" } })
                </div>
            </div>

            <br />
            <b>SEGUNDO APELLIDO:</b>
            <div class="form-group form-inline">
                <div class="col-md-10">
                    @Html.EditorFor(model => Session["Apellido2Usuario"], new { htmlAttributes = new { @class = "form-control", @style = "width:500px", @readonly = "readonly" } })
                </div>
            </div>

            <br />
            <b>USUARIO:</b>
            <div class="form-group form-inline">
                <div class="col-md-10">
                    @Html.EditorFor(model => Session["Usuario"], new { htmlAttributes = new { @class = "form-control", @style = "width:500px", @readonly = "readonly" } })
                </div>
            </div>

            <br />
            <b>FECHA INGRESO:</b>
            <div class="form-group form-inline">
                <div class="col-md-10">
                    @Html.EditorFor(model => Session["FechaIngresoUsuario"], new { htmlAttributes = new { @class = "form-control", @style = "width:500px", @readonly = "readonly" } })
                </div>
            </div>

            <br />
            <b>ID ROL:</b>
            <div class="form-group form-inline">
                <div class="col-md-10">
                    @Html.EditorFor(model => Session["RolUsuario"], new { htmlAttributes = new { @class = "form-control", @style = "width:500px", @readonly = "readonly" } })
                </div>
            </div>

            <hr />

        </div>
    }

</body>
</html>

<script src="~/Funciones/Inventario.js"></script>
<script src="~/Funciones/Generales.js"></script>


